<%- include ../includes/header %>
<%- include ../includes/headercsslinks %>
<link rel="stylesheet" href="css/login.css"/>
<%- include ../includes/closingheader %>

<div class="">
    <div class="inner-sm">

        <form role="form" action="/login" role="form" method="post" class="login-form">

            <% if(errors) { %>
            <% if(errors.length > 0) { %>
            <div class="alert alert-danger" role="alert">
                <ul style="list-style-type: square">
                    <% errors.forEach(function(error){ %>
                    <li>
                        <%= error.msg %>
                    </li>
                    <% }); %>
                </ul>
            </div>

            <% } %>
            <% } %>

            <div class="card card-default">
                <div class="card-body">
                    <div class="form-group">
                        <input type="text" name="Email" required placeholder="Email..."
                               class="form-username form-control" id="email">
                    </div>

                    <div class="form-group">
                        <input type="password" required name="Password" placeholder="Password..."
                               class="form-password form-control" id="password">
                    </div>
                    <button type="submit" class="btn  btn-success btn-block">Login</button>
                    <br>
                    <div align="center">
                        <p>
                            <a class="" href="#" role="button" aria-expanded="false">
                                <b>Forgot password?</b>
                            </a>
                        </p>
                    </div>
                </div>
                <div align="center" class="card-footer">
                    <b>Don't have an account yet?</b><br>
                    <a class="btn btn-primary btn-block" href="/signup" role="button" aria-expanded="false"><b>Register
                            Now</b></a>
                </div>
            </div>
        </form>
    </div>
</div>

<%- include ../includes/footerjavascript %>
<%- include ../includes/footer %>